<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".status.DetailStatusActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat"
        android:textSize="25sp"
        android:gravity="center_horizontal"
       app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        android:id="@+id/titleWelcome"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/titleWelcome"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Nama: "
        android:id="@+id/v1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:id="@+id/tvNama"
        app:layout_constraintLeft_toRightOf="@id/v1"
        app:layout_constraintTop_toBottomOf="@id/titleWelcome"
        android:text="Sample Name"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/v1"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="NIK : "
        android:id="@+id/v2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:id="@+id/tvNik"
        app:layout_constraintLeft_toRightOf="@id/v2"
        app:layout_constraintTop_toBottomOf="@id/tvNama"
        android:text="Sample NIK"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/v2"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Jenis PPKS : "
        android:id="@+id/v3"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:id="@+id/tvPPKS"
        app:layout_constraintLeft_toRightOf="@id/v3"
        app:layout_constraintTop_toBottomOf="@id/tvNik"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/v3"
        android:text="Sample PPKS"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvPPKS"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Alamat : "
        android:id="@+id/v4"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:id="@+id/tvalamat"
        app:layout_constraintLeft_toRightOf="@id/v4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/v4"
        app:layout_constraintTop_toBottomOf="@id/tvPPKS"
        android:text="Sample Alamat"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_marginTop="25dp"
        android:id="@+id/tvKet"
        app:layout_constraintTop_toBottomOf="@id/tvalamat"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/keterangan"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:id="@+id/tvUang"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvKet"
        android:text="Rp. 300.000 / Bulan"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginTop="25dp"
        android:id="@+id/tvProsedur"
        app:layout_constraintTop_toBottomOf="@id/tvUang"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/prosedur"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginTop="25dp"
        android:id="@+id/tvLaporan"
        app:layout_constraintTop_toBottomOf="@id/tvProsedur"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/laporan"/>





</androidx.constraintlayout.widget.ConstraintLayout>